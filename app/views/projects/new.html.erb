<!-- プロジェクト新規募集 -->
<%= form_for @project do |f| %>
  <% if @project.errors.any? %>
    <p><%= @project.errors.count %>件のエラーがあります。</p>
    <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :image %>
  <%= f.file_field :image %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.submit '募集' %>
<% end %>
